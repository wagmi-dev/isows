{
	"files": {
		"ignore": [
			"_cjs",
			"_esm",
			"_types",
			".next",
			"bun.lockb",
			"node.js",
			"tsconfig.json",
			"tsconfig.*.json",
			"tsconfig.node.json"
		]
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": {
				"noDelete": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noAssignInExpressions": "off"
			}
		}
	}
}
